.btn-primary {
    background-color: #FF0000 !important;
    border-color: #FF0000 !important;
}

.btn-primary:hover {
    background-color: #FF3733 !important;
    border-color: #FF3733 !important;
}

.btn-primary:focus, .btn-primary.focus {
    box-shadow: 0 0 0 0.2rem rgba(255, 174, 172, 0.5) !important;
}

.btn-primary.disabled, .btn-primary:disabled {
    background-color: #AA0000 !important;
    border-color: #AA0000 !important;
}

.btn-primary:not(:disabled):not(.disabled):active, .btn-primary:not(:disabled):not(.disabled).active, .show > .btn-primary.dropdown-toggle {
    background-color: #AA0000 !important;
    border-color: #AA0000 !important;
}

.btn-primary:not(:disabled):not(.disabled):active:focus, .btn-primary:not(:disabled):not(.disabled).active:focus, .show > .btn-primary.dropdown-toggle:focus {
    box-shadow: 0 0 0 0.2rem rgba(175, 0, 0, 0.5) !important;
}

.btn-link {
    color: #FF0000 !important;
}

.btn-link:hover {
    color: #AA0000 !important;
}

.form-control:focus {
    border-color: rgba(255, 174, 172, 0.5) !important;
    box-shadow: 0 0 0 0.2rem rgba(255, 174, 172, 0.5) !important;
}

a {
    color: #FF0000 !important;
}

a:hover {
    color: #AA0000 !important;
}

.o_input {
    border-radius: 20px !important;
}

.o_kanban_view {
    border-radius: 20px 0 0 0 !important;
}

..o_kanban_view .o_kanban_record.o_kanban_record_has_image_fill .o_kanban_image_fill_left
