<odoo>
  <data>
    <!-- adding salary to job -->
    <record id="sudameris_salary_inherith" model="ir.ui.view">
      <field name="name">hr.employee.form.sudameris.salary.inherith</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form" />
      <field name="arch" type="xml">
        <field name="parent_id" position="after">
          <field name="salario" />
        </field>
        <field name="identification_id" position="before">
          <field name="tdoc" />
          <field name="vencidoc" />
        </field>
        <xpath expr="//page[@name='hr_settings']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//page[@name='hr_settings']" position="after">
          <page name="hr_sudameris" string="Sudameris">
            <group>
                <group string="Información laboral">
                    <field name="tpgroup"/>
                    <field name="ejecutivo"/>
                    <field name="tpcontrato"/>
                    <field name="fingreso"/>
                </group>
                <group string="Información bancaria">
                    <field name="ctnro" />
                    <field name="ctnom"/>
                </group>
            </group>
          </page>
        </xpath>
      </field>
    </record>
    
    <record id="open_view_sudameris_salary_movement" model="ir.ui.view">
      <field name="name">hr.employee.sudameris.salary.movement</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">hcs_sudameris.sudameris_employee_salary_movement</field>
      <field name="view_mode">tree,kanban,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Crear un movimiento de Salario!
        </p>
      </field>
    </record>

    <menuitem
        id="menu_hr_employee_sudameris_salary_movement"
        name="Movimiento de salarios"
        action="open_view_sudameris_salary_movement"
        parent="menu_hr_employee_payroll"
        sequence="2"/>

